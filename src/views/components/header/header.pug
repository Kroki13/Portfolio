header.header
    .header__background
        +image('bg/hero.jpg', 'background', 'header__background-img')

    .header__links
        include ../socials/socials
        +socials('header')

    .header__menu
        include ../menu/menu
    .header__content
        .header__pic
            img.header__pic-img(src="./assets/images/content/user-full.jpg")
        h1.header__title Бабкин Дмитрий
        span.header__txt личный сайт разработчика
        +image('bg/portfolio_header.svg', 'background', 'header__background-icon')
    .header__btn
      button.arrow#btnarrow
        +icon('arrow_down', 'arrow__down')